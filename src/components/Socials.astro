<style lang="scss" define:vars={{ direction, gap }}>
  .socials {
    display: flex;
    flex-direction: var(--direction);
    gap: var(--gap);
    list-style-type: none;
    padding: 0;
    margin: 0;
    li {
      a {
        color: var(--color-silver-300);
        align-items: center;
        display: flex;
        font-size: var(--font-size-xl);
        svg {
          fill: var(--color-orange);
          margin-right: 10px;
        }
      }
