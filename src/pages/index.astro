---
import DefaultLayout from '../components/LayoutDefault.astro';
import Button from '../components/Button.astro';
import { yearsInIndustry } from "../js/yearsInIndustry";
---

<DefaultLayout documentTitle="Luke Liasi">
  <section class="container" style="z-index: 1; position: relative;">
    <h1>
      <span class="intro-welcome">Welcome, my name is <br></span>
      <span class="intro-name text-swipe-animation">Luke Liasi.</span>
    </h1>
    <h2 class="intro">I build compelling <br class="intro-break" />digital experiences.</h2>
    <p class="desc">
      Software engineer, passionate about solving problems with code.<br class="desc-break" /> Over {yearsInIndustry} years of industry experience specialising in JavaScript, React & Node.
    </p>

    <Button href="/projects" variant="outline" size="lg" colorScheme="green">
      See my projects
      <svg style="margin-left: 5px" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 20 20" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
    </Button>
  </section>

  <canvas id="waves"></canvas>
</DefaultLayout>

<style lang="scss">
  $waves-opacity: 0.5;

  @keyframes fadeInWaves {
    0% { opacity: 0 }
    100% { opacity: $waves-opacity }
  }

  canvas#waves {
    width: 100%;
    height: 100vh;
    animation: fadeInWaves 2s;
    background: transparent;
    opacity: $waves-opacity;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    overflow: hidden;
    pointer-events: none;
  }

  h1 {
    line-height: 2.5rem;
    margin: 1rem 0;
  }

  .intro-welcome {
    color: var(--color-mint);
    font-family: var(--font-family-IBM-Plex-Mono);
    font-weight: 600;
    font-size: var(--font-size-base);
  }

  .intro-name {
    font-family: var(--font-family-Mukta);
    font-size: var(--font-size-14xl);
    overflow: hidden;
    display: inline-block;
    padding: 10px 0;
    color: white;
  }

  .intro {
    color: var(--color-silver-300);
    font-size: var(--font-size-11xl);
    line-height: 3.25rem;
    margin: 1rem 0;
  }

  .desc {
    color: var(--color-silver-100);
    font-size: var(--font-size-lg);
    line-height: 1.5em;
    margin: 1.5rem 0;
  }

  @media screen and (max-width: 980px) {
    h1 {
      line-height: 1.75rem;
      margin: 0.5rem 0;
    }

    .intro-name {
      font-size: var(--font-size-10xl);
      line-height: 3rem;
    }

    .intro {
      font-size: var(--font-size-3xl);
      line-height: 2rem;
      margin: 0.5rem 0;
    }

    .intro-break {
      display: none;
    }

    .desc-break {
      display: none;
    }
  }
</style>

<script hoist>
  import "../js/wave.js";
</script>